<Window x:Class="NotepadApp.Views.FindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find" Height="150" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Find:" />
        <TextBox x:Name="SearchTextBox" Width="300" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Find Next" Width="80" Click="FindNextButton_Click" Margin="0,0,5,0"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
